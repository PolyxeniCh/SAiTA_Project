<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/airline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/outbound_origin"
        android:padding="6dp"
        android:textSize="22sp"
        android:textColor="#e533b6"/>

    <!-- Outbound Flight !-->

    <TextView
        android:id="@+id/outbound_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/airline"
        android:textSize="18sp"
        android:textColor="#3360e5"/>

    <TextView
        android:id="@+id/outbound_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/outbound_origin"
        android:layout_toRightOf="@+id/outbound_origin"
        android:layout_marginLeft="20sp"
        android:textSize="18sp"
        android:textColor="#14265c"/>

    <TextView
        android:id="@+id/outbound_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outbound_origin"
        android:textSize="18sp"
        android:textColor="#3360e5"/>

    <TextView
        android:id="@+id/outbound_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/outbound_destination"
        android:layout_toRightOf="@+id/outbound_destination"
        android:layout_marginLeft="20sp"
        android:textSize="18sp"
        android:textColor="#14265c"/>

    <TextView
        android:id="@+id/outbound_stops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_below="@+id/outbound_destination"/>

</RelativeLayout>
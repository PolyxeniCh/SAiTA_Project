<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listview_flight"
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:text="@string/flight_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFlightPriceLabel"
            android:textSize="20sp"
            android:textColor="#e533b6"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFlightPrice"
            android:layout_alignBaseline="@+id/textViewFlightPriceLabel"
            android:layout_toRightOf="@+id/textViewFlightPriceLabel"
            android:textSize="20sp"
            android:textColor="#e533b6"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/book_now_button"
            android:text="@string/book_button_label"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:background="#e533b6"
            android:textColor="#FFFFFF"
            android:layout_alignBaseline="@+id/textViewFlightPriceLabel"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
